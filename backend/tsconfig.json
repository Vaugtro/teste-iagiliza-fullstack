{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "paths": {
      "*": ["./src/*"],

      "@routes/*": ["./src/routes/*"],
      "@plugins/*": ["./src/plugins/*"],
      "@test/*": ["./src/tests/*"],
      "@orm/*": ["./src/orm/*"],
      "@schemas/*": ["./src/schemas/*"]
    }
  },
  "declaration": true,
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}